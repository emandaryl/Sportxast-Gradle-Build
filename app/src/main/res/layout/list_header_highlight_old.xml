<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" 
    android:padding="4dp">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/imgvw_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_avatar" />

    <TextView
        android:id="@+id/txtvw_userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgvw_avatar"
        android:text="TextView"
        android:layout_marginLeft="4dp" 
        android:textColor="@color/uni_blue"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txtvw_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="69d"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imgvw_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txtvw_date"
        android:src="@drawable/ic_clock" />

</RelativeLayout>