<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="800dp"
    android:minHeight="200dp"
    android:orientation="vertical">
    
    <!-- 
    <com.facebook.widget.LoginButton
        android:id="@+id/btn_facebook_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
         -->
         
	<ProgressBar
	    android:id="@+id/progress_checking"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:visibility="visible"
	    android:layout_gravity="center"
	    android:layout_marginBottom="60dp"
	    />
   
	<LinearLayout
	    android:id="@+id/lin_facebook_login"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:orientation="vertical">
	    <Button
	   	    android:id="@+id/btn_facebook_login"
	   	    android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:layout_gravity="center"
	        android:text="@string/login_facebook"
	        style="@style/FacebookStyle"
	        android:visibility="visible"
	        android:layout_marginLeft="30dp"
	        android:layout_marginRight="30dp"
	        />
	</LinearLayout>
   	
    <TextView
        android:id="@+id/txtvw_facebook_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/facebook_permission_user"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:gravity="center"
        />
    
    <LinearLayout
        android:id="@+id/lin_section_status"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone"
        >
        <EditText
	        android:id="@+id/edt_status"
	        android:layout_width="0dp"
	        android:layout_height="175dp"
	        android:layout_weight="2"
	        android:inputType="text|textMultiLine"
	        android:layout_gravity="top"
	        />
        <ImageView
	        android:id="@+id/imgvw_thumbnail"
	        android:layout_width="0dp"
	        android:layout_height="100dp"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        />
    </LinearLayout>

    <Button
        android:id="@+id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/post_to_facebook"
        android:layout_marginTop="15dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        style="@style/FacebookStyle"
        />
    
</LinearLayout>