<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layerlist_lightgreyshapewithlinebelow" >

    <RelativeLayout
        android:id="@+id/layout_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/black" >

        <VideoView
            android:id="@+id/video_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgvw_media" 
            android:layout_centerHorizontal="true" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/imgvw_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/imgbtn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play" />

        <ProgressBar
            android:id="@+id/progress_medialoading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/imgbtn_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/video_media"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_expand" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imgbtn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_media"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_more" />

    <TextView
        android:id="@+id/txtvw_favoriteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_favorite"
        android:layout_below="@+id/layout_media"
        android:padding="1dp"
        android:text="favorites"
        android:textColor="@color/uni_blue"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imgvw_comment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtvw_favoriteCount"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_comment" />

    <LinearLayout
        android:id="@+id/layout_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvw_favoriteCount"
        android:layout_toRightOf="@+id/imgvw_comment_icon"
        android:padding="1dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_comments"
      android:padding="8dp" >

        <ImageButton
            android:id="@+id/imgbtn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_btn_favorite" />

        <ImageButton
            android:id="@+id/imgbtn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_btn_comment" />

        <ImageButton
            android:id="@+id/imgbtn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_btn_share" />
    </LinearLayout>

</RelativeLayout>