<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/layerlist_whiteshapewithlinebelow"
        android:padding="8dp" >

        <EditText
            android:id="@+id/edittext_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_cancel"
            android:background="@drawable/shape_btn_white"
            android:drawableLeft="@drawable/ic_search_small"
            android:hint="Search"
            android:paddingLeft="4dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:text="Cancel"
            android:textColor="@color/uni_blue"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

   

    <ListView
        android:id="@+id/listvw_searchevents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/progress_footerloader"
        android:layout_below="@+id/layout_search"
        android:divider="@null"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_footerloader"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:visibility="gone" />

</RelativeLayout>