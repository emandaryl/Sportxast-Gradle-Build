<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_listview" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/imgvw_events_photo" >

        <ImageView
            android:id="@+id/imgvw_events_sportsicon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/imgvw_events_isToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_white_withblueborder"
            android:textColor="@color/uni_blue" 
            android:text="Follow"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtvw_events_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12/21"
            android:textColor="#444444"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgvw_events_photo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_capture_photo" />

    <TextView
        android:id="@+id/txtvw_events_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgvw_events_photo"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_marginBottom="9px"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#444444"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtvw_events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtvw_events_subtitle"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_marginBottom="4px"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="TextView"
        android:textColor="#fc4c06"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtvw_events_title0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtvw_events_title"
        android:layout_alignRight="@+id/txtvw_events_title"
        android:layout_above="@+id/txtvw_events_title"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fc4c06"
        android:textSize="14sp" />

</RelativeLayout>