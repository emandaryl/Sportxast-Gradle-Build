<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/layerlist_lightgreyshapewithlineabove"
        android:padding="4dp" >

        <TextView
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:onClick="onSend"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Send"
            android:textColor="@color/uni_blue"
            android:textSize="14sp" />

        <com.sportxast.SportXast.thirdparty_class.EditTextBackKeyEvent
            android:id="@+id/edittext_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_send"
            android:background="@drawable/shape_btn_white"
            android:ems="10"
            android:hint="Add comment..."
            android:padding="4dp"
            android:textColor="@color/black"
            android:textSize="14sp" >

            <requestFocus />
        </com.sportxast.SportXast.thirdparty_class.EditTextBackKeyEvent>
    </RelativeLayout>

    <View
        android:id="@+id/view_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_comment"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

</RelativeLayout>