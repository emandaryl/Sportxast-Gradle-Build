<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:background="@color/white">

    <ImageView
        android:id="@+id/imgvw_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_istoday" android:padding="8dp" />

    <TextView
        android:id="@+id/txtvw_menu_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="TextView"
        android:background="@drawable/layerlist_whiteshapewithlinebelow"
        android:textColor="@color/uni_blue"
        android:textSize="16sp" />

</LinearLayout>
