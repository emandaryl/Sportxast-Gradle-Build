<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layerlist_whiteshapewithlinebelow"
    android:padding="4dp" >

    <TextView
        android:id="@+id/txtvw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/layout_cal"
        android:layout_toRightOf="@+id/imgvw_avatar_events"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:text="Chong Hua Hospital"
        android:textColor="@color/uni_grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtvw_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtvw_title"
        android:layout_alignRight="@+id/txtvw_title"
        android:layout_below="@+id/txtvw_title"
        android:gravity="center"
        android:singleLine="true"
        android:text="test"
        android:textColor="@color/uni_light_grey"
        android:textSize="12sp" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/imgvw_avatar_events"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp" />

    <LinearLayout
        android:id="@+id/layout_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgvw_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_small" />

        <TextView
            android:id="@+id/txtvw_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.18"
            android:textColor="@color/uni_grey"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>