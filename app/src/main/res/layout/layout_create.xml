<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

      <!-- Header -->

    <RelativeLayout
        android:id="@+id/sx_header_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <!-- Study Title -->
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/sx_header_wrapper"
	    android:orientation="vertical" >
   <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical" >
    	<LinearLayout 
       	 android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/uni_grey_bg"
		    android:orientation="vertical" >

    		<TextView
    		    android:id="@+id/textView1"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:layout_marginBottom="3dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_marginTop="3dp"
    		    android:text="SPORT"
    		    android:textColor="#333333"
    		    android:textStyle="bold" />

 		</LinearLayout>
 		<TextView
 		    android:id="@+id/tv_selectSport"
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:layout_marginBottom="5dp"
 		    android:layout_marginLeft="10dp"
 		    android:layout_marginTop="5dp"
 		    android:hint="Select a Sport"
 		    android:textColor="#333333"
 		    android:textSize="16sp" />

         </LinearLayout>
     	 <LinearLayout 
       	 android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">

     	     
     	     <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/uni_grey_bg"
		    android:orientation="vertical" >
     	     
     	     
    		<TextView
    		    android:id="@+id/textView1"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:layout_marginBottom="3dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_marginTop="3dp" 
    		    android:text="VENUE"
    		    android:textColor="#333333"
    		    android:textStyle="bold" />
 </LinearLayout>
 		<TextView
 		    android:id="@+id/tv_selectVenue"
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:layout_marginBottom="5dp"
 		    android:layout_marginLeft="10dp"
 		    android:layout_marginTop="5dp"
 		    android:hint="Select a Venue"
 		    android:textColor="#333333"
 		    android:textSize="16sp" />

         </LinearLayout>
         <LinearLayout 
       	 android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">

     	     <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/uni_grey_bg"
		    android:orientation="vertical" >
     	     
    		<TextView
    		    android:id="@+id/textView1"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:layout_marginBottom="3dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_marginTop="3dp" 
    		    android:text="TEAM"
    		    android:textColor="#333333"
    		    android:textStyle="bold" />
 </LinearLayout>
 		<TextView
 		    android:id="@+id/tv_selectTeam1"
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:layout_marginBottom="5dp"
 		    android:layout_marginLeft="10dp"
 		    android:layout_marginTop="5dp"
 		    android:hint="Add a Team"
 		    android:textColor="#333333"
 		    android:textSize="16sp" />

		<TextView
		    android:id="@+id/tv_selectTeam2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="5dp"
		    android:hint="Add another Team..."
		    android:textColor="#333333"
		    android:textSize="16sp" />
	
         </LinearLayout>   
    </LinearLayout>
    
   
   <LinearLayout 
       	 android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">
 
   <LinearLayout 
       	 android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">

     	     <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/uni_grey_bg"
		    android:orientation="vertical" >
     	     
     	     
    		<TextView
    		    android:id="@+id/textView12"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:layout_marginBottom="3dp"
    		    android:layout_marginLeft="10dp"
    		    android:layout_marginTop="3dp" 
    		    android:text="RECENT"
    		    android:textColor="#333333"
    		    android:textStyle="bold" />
	 </LinearLayout>
         </LinearLayout>
	   <com.sportxast.SportXast.thirdparty_class.ObservableScrollView
	          android:id="@+id/scrollViewContainer"
	          android:layout_width="fill_parent"
	          android:layout_height="fill_parent"
	          android:fadingEdge="vertical" >
	
		    <LinearLayout
		        android:id="@+id/recentevent_list_cont1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:weightSum="3" >
		    
		    </LinearLayout>
	    
		</com.sportxast.SportXast.thirdparty_class.ObservableScrollView>
	    
   
         </LinearLayout>
   
     </LinearLayout>
	
    
    <com.sportxast.SportXast.thirdparty_class.HeaderListView
        android:id="@+id/headerListView_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sx_header_wrapper"
        android:visibility="gone" >

    </com.sportxast.SportXast.thirdparty_class.HeaderListView>

<RelativeLayout
    android:id="@+id/pbLoading_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alpha="0.40"
    android:background="#ffffff"
    android:visibility="gone" >

	      <!-- android:background="#666666" --> 
	        <ProgressBar
	            android:id="@+id/pbLoading" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:visibility="visible" />
 
	
	</RelativeLayout>
</RelativeLayout>
